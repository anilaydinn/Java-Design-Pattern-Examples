
final class Captain {
	
	private static Captain captain;
	
	//We make the constructor private to prevent the use of "new"
	private Captain() {
		
	}
	
	public static synchronized Captain getCaptain() {
		
		//Lazy initialization
		if(captain == null) {
			
			captain = new Captain();
			System.out.println("New captain is elected for your team.");
		}
		else {
			
			
		}
	}
}
